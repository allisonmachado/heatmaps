generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model habit {
  id        Int         @id @default(autoincrement())
  user_id   Int
  title     String      @db.VarChar(245)
  color     String      @db.Char(6)
  type      habit_type
  user      user        @relation(fields: [user_id], references: [id], onDelete: NoAction, onUpdate: NoAction, map: "fk_habit_user")
  habit_log habit_log[]

  @@index([user_id], map: "fk_habit_user_idx")
}

model habit_log {
  id           Int      @id @default(autoincrement())
  habit_id     Int
  user_id      Int
  day          DateTime @db.Date
  binary_value Int?     @db.TinyInt
  timer_value  Int?
  habit        habit    @relation(fields: [habit_id], references: [id], onDelete: NoAction, onUpdate: NoAction, map: "fk_habit_log_habit1")
  user         user     @relation(fields: [user_id], references: [id], onDelete: NoAction, onUpdate: NoAction, map: "fk_habit_log_user1")

  @@index([habit_id], map: "fk_habit_log_habit1_idx")
  @@index([user_id], map: "fk_habit_log_user1_idx")
}

model user {
  id        Int         @id @default(autoincrement())
  username  String      @db.VarChar(265)
  email     String      @unique(map: "email_UNIQUE") @db.VarChar(265)
  habit     habit[]
  habit_log habit_log[]
}

enum habit_type {
  binary
  timer
}
